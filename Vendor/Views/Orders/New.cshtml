@{
  Layout = "_Layout";
}


<h1>Add a new order to @Model.VendName</h1>

<form action="/vendors/@Model.VendId/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.VendId">
  <label for="OrderInfo">Enter Order Details:</label>
  <input id="OrderInfo" name="OrderInfo" type="text">
  <label for="OrderPrice">Enter Order Price:</label>
  <input id="OrderPrice" name="OrderPrice" type="text">
  <label for="OrderDate">Enter Order Date (mm/dd/yyyy):</label>
  <input id="OrderDate" name="OrderDate" type="text">
  <button type='submit'>Add Order to Vendor</button>
</form>