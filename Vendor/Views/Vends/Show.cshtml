@{
  Layout = "_Layout";
}

@using Vendor.Models;

<h1 class="smallHead">Here are all the orders for @Model["vendor"].VendName:</h1>

<ol id="orderAlign">
@foreach (Order order in @Model["orders"])
{
  <li>@order.OrderInfo</li>
  <ul>
    <li>@order.OrderPrice</li>
    <li>@order.OrderDate</li>
  </ul>
}
</ol>
<h3><a href='/vendors/@Model["vendor"].VendId/orders/new'>Add a new order for this Vendor</a></h3>
<hr>
<div class="row">
  <div class="col-md-6">
    <p><a href='/vendors'>Return to list of Vendors</a></p>
  </div>
  <div class="col-md-6">
    <p><a href='/'>Return to Home Page</a></p>
  </div>
</div>